.stars, .twinkling, .clouds {
	position:absolute;
	display:block;
	top:0; bottom:0;
	left:0; right:0;
  width:100%; height:100%;
  background-repeat: repeat;
}

.space-background {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
  &::after {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: block;
    content:'';
    left: 0;
    background: linear-gradient(to bottom right, blue, transparent 30%, transparent 60%, orange);
    opacity: 0.2;
    z-index: 2;
  }
  &::before {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: block;
    content:'';
    left: 0;
    background: radial-gradient(lightblue, transparent);
    opacity: 0.2;
    z-index: 2;
  }
}

.stars {
	z-index: 0;
	background: #000 url({{'stars.png' | asset_url }}) repeat top center;
}

.twinkling{
	z-index: 1;
	background:transparent url({{'twinkling.png' | asset_url }}) repeat top center;
  animation: move-twink-back 300s linear infinite;
  width: calc(20000px + 100vw);
  height: calc(10000px + 100vh);
}

.clouds{
  z-index: 2;
   width: calc(5000px + 100vw);
  background:transparent url({{'clouds.png' | asset_url }}) repeat top center;
  animation: move-clouds-back 200s linear infinite;
}

@keyframes move-twink-back {
	from {transform: translate3d(0,0,0)}
	to {transform: translate3d(-20000px, -10000px, 0)}
}

@keyframes move-clouds-back {
	from {transform: translate3d(0,0,0)}
	to {transform: translate3d(-5000px, 0, 0)}
}
