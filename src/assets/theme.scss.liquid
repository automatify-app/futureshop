.button, a.button, button, button.button, .btn, a.btn {

  {% case settings.font_family_buttons %}
    {%when 'body' %}
      font-family: var(--font-body-real);
      font-weight: {{ settings.font_body.weight }};
      {%when 'heading' %}
      font-family: var(--font-heading-real);
      font-weight: {{ settings.font_heading.weight }};
      {%when 'extra' %}
      font-family: var(--font-extra-real);
      font-weight: {{ settings.font_extra.weight }};
      {%when 'script' %}
      font-family: var(--font-script-real);
      font-weight: 400;
    {%endcase %}

  /* {{settings.button_capitalization}} */
  line-height: {{settings.button_line_height | divided_by:10.0 }};
  padding: {{settings.button_padding_top | divided_by: 10.0 }}em  {{settings.button_padding_horiz | divided_by: 10.0 }}em {{settings.button_padding_bottom | divided_by: 10.0 }}em ;
  text-transform: {{settings.button_capitalization | default: "none"}};
  font-weight: {{settings.button_font_weight | default: "700"}};
  letter-spacing: {{settings.button_letter_spacing | default: 10 | divided_by: 10.0 | minus: 1.0 }}em;
  font-style: {{settings.button_text_style | default : "Standard"}};

  font-size: {{settings.button_font_size | default: '17'}}px;
  @media (max-width: 720px) {
    font-size: {{settings.button_font_size_mobile | default: '16'}}px;
  }
}

