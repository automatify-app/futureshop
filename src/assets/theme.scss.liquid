.heading, .main-header {
  {% case settings.header_size %}
    {% when 'small' %}
      font-size: calc(2rem + 1vw);
      @media (min-width: 1200px) {
        font-size: 45px;
      }

      &.mega {
        font-size: calc(2.5rem + 2vw);
         @media (min-width: 1200px) {
        font-size: 55px;
      }
      }
    {% when 'standard' %}

      font-size: calc(2.25rem + 2vw);
      @media (min-width: 1200px) {
        font-size: 5rem;
      }
      &.mega , .font--mega & {
        font-size: calc(2.8rem + 3vw);
        @media (min-width: 1200px) {
          font-size: 7.5rem;
        }
      }
    {% when 'large' %}
      font-size: calc(3rem + 3vw);
      @media (min-width: 1200px) {
        font-size: 6rem;
      }
      &.mega, .font-mega &  {
         font-size: calc(4rem + 4vw);
        @media (min-width: 1200px) {
          font-size: 8rem;
        }
      }
    {% when 'huge' %}
      font-size: calc(4rem + 4vw);
      @media (min-width: 1200px) {
        font-size: 8rem;
      }
      &.mega , .font--mega & {
        font-size: calc(5rem + 5vw);
        @media (min-width: 1200px) {
          font-size: 9rem;
        }
      }

  {%endcase %}

}


h3.heading {
