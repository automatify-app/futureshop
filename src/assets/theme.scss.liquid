 ///SWATCH COLORS
 //create object from liquid form
{% assign swatch_object = settings.swatch-hexes | split: '\n' %}
{% assign swatch_hexes = settings.swatch-hexes | strip | strip_html | newline_to_br | split: '<br />' %}
{% for hex in swatch_hexes %}
  {% assign hex_info = hex | split: ':' %}
  {% assign hex_color = hex_info[0] | strip %}
  {% assign hex_code = hex_info[1] | strip %}

  .swatch--{{hex_color}} label {
    background: {{hex_code}} !important;
  }
{%endfor%}

//This is my custom background code
body {
  {% assign bg_style = settings.background_style %}
  {% if settings.main_background != blank and settings.enable_background == true %}
    background-image: url("{{settings.main_background | img_url: '800x'}}");
    background-repeat: repeat;
    background-size: auto;
    {% if settings.background_fix == true %}
    background-attachment: fixed;
    {%endif%}
    {% if bg_style == 'fit' or bg_style == 'stretch' or bg_style == "cover" %}
    background-repeat: no-repeat;
    background-size:  {{bg_style}};
    @media (min-width: 600px) {
      background-image: url({{settings.main_background | img_url: '1100x'}});
    }
    @media (min-width: 900px) {
      background-image: url({{settings.main_background | img_url: '1500x'}});
    }
    @media (min-height: 1500px) {
      background-image: url({{settings.main_background | img_url: '2000x'}});
    }
    @media (min-width: 1500px) {
      background-image: url({{settings.main_background | img_url: 'master'}});
    }
    {%endif%}
    main#mainContent {
      background: transparent;
    }
  {%endif%}
}


.heading, .main-header {
  {% case settings.header_size %}
    {% when 'small' %}
      font-size: calc(2rem + 1vw);
      @media (min-width: 1200px) {
        font-size: 45px;
      }

      &.mega {
        font-size: calc(2.5rem + 2vw);
         @media (min-width: 1200px) {
        font-size: 55px;
      }
      }
    {% when 'standard' %}
      font-size: calc(2.5rem + 2vw);
      @media (min-width: 1200px) {
        font-size: 55px;
      }
      &.mega {
        font-size: calc(3rem + 3vw);
        @media (min-width: 1200px) {
          font-size: 65px;
        }
      }
    {% when 'large' %}
      font-size: calc(3rem + 3vw);
      @media (min-width: 1200px) {
        font-size: 65px;
      }
      &.mega {
         font-size: calc(4rem + 4vw);
        @media (min-width: 1200px) {
          font-size: 80px;
        }
      }
    {% when 'huge' %}
      font-size: calc(4rem + 4vw);
      @media (min-width: 1200px) {
        font-size: 80px;
      }
      &.mega {
        font-size: calc(5rem + 5vw);
        @media (min-width: 1200px) {
          font-size: 90px;
        }
      }

  {%endcase %}

  {% if settings.header_style == 'caps' %}
    text-transform: uppercase;
  {%endif%}

   {% case settings.font_family_heading %}
   {%when 'body' %}
    font-family: var(--font-body-real);
    font-weight: {{ settings.font_body.weight }};
    {%when 'heading' %}
    font-family: var(--font-heading-real);
    font-weight: {{ settings.font_heading.weight }};
    {%when 'extra' %}
    font-family: var(--font-extra-real);
    font-weight: {{ settings.font_extra.weight }};
  {%endcase %}
}

