    @media (max-width: 550px ){
      min-height: {{settings.hero_height_mobile}}px;
    }
    @media (min-width: 1300px ){
      min-height: {{settings.hero_height_huge}}px;
    }
  }
}


.heading, .main-header {
  {% case settings.header_size %}
    {% when 'small' %}
      font-size: calc(2rem + 1vw);
      @media (min-width: 1200px) {
        font-size: 45px;
      }

      &.mega {
        font-size: calc(2.5rem + 2vw);
         @media (min-width: 1200px) {
        font-size: 55px;
      }
      }
    {% when 'standard' %}
      font-size: calc(2.5rem + 2vw);
      @media (min-width: 1200px) {
        font-size: 5.5rem;
      }
      &.mega , .font--mega & {
        font-size: calc(3rem + 3vw);
        @media (min-width: 1200px) {
          font-size: 7.5rem;
        }
      }
    {% when 'large' %}
      font-size: calc(3rem + 3vw);
      @media (min-width: 1200px) {
        font-size: 6.5rem;
      }
      &.mega, .font-mega &  {
         font-size: calc(4rem + 4vw);
        @media (min-width: 1200px) {
          font-size: 8rem;
        }
      }
    {% when 'huge' %}
      font-size: calc(4rem + 4vw);
      @media (min-width: 1200px) {
        font-size: 8rem;
      }
      &.mega , .font--mega & {
        font-size: calc(5rem + 5vw);
        @media (min-width: 1200px) {
          font-size: 9rem;
        }
      }

  {%endcase %}


  // Heading spacing adjustments

  margin-top: {{settings.header_margin_top | divided_by: 10.0 }}em;
  margin-bottom: {{settings.header_margin_bottom | divided_by: 10.0 }}em;
  line-height: {{settings.header_line_height | divided_by: 10.0 }};

  {% if settings.header_style == 'caps' %}
    text-transform: uppercase;
  {%endif%}
  {% if settings.header_style == 'lowercase' %}
    text-transform: lowercase;
  {%endif%}

  font-style: {{settings.header_font_style | default: 'standard'}};

   {% case settings.font_family_heading %}
   {%when 'body' %}
    font-family: var(--font-body-real);
    font-weight: {{ settings.font_body.weight | default: 700 }};
    {%when 'heading' %}
    font-family: var(--font-heading-real);
    font-weight: {{ settings.font_heading.weight | default: 700 }};
    {%when 'extra' %}
    font-family: var(--font-extra-real);
    font-weight: {{ settings.font_extra.weight | default: 700}};
    {%when 'script' %}
    font-family: var(--font-script-real);
    font-weight: 400;
  {%endcase %}
}

