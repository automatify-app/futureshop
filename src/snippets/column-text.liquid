

<div class="content-column type--text size--{{params.size}} align--{{params.align}}">
{% if params.pre_title != blank or params.title != blank  %}
    <div class="block-header section-header align--{{params.align_text}}">
      {% if params.pre_title != blank %}
        <h4 data-aos="fade-up" data-aos-delay="{{delay}}{% assign delay = delay | plus: 50 %}" class="h4 label block-header__pre_title">{{ params.pre_title | escape }}</h4>
      {% endif %}
      {% if params.title != blank %}
        <h3 data-aos="fade-up" data-aos-delay="{{delay}}{% assign delay = delay | plus: 50 %}" class="h3 block-header__title heading">{{ params.title | escape }}</h2>
      {% endif %}
      {% if params.post_title != blank %}
        <h4 data-aos="fade-up" data-aos-delay="{{delay}}{% assign delay = delay | plus: 50 %}" class="h4 label block-header__post-title">{{ params.post_title | escape }}</h4>
      {% endif %}
    </div>
{%endif%}
{%- if params.text != blank -%}
  <div data-aos="fade-up" data-aos-delay="{{delay}}{% assign delay = delay | plus: 50 %}"  class="rte align--{{params.align_text}}">
    {{ params.text }}
  </div>
{%- endif -%}
 {% if params.button_text != blank and  params.button_url != blank %}
  <div data-aos="fade-up" data-aos-delay="{{delay}}{% assign delay = delay | plus: 50 %}"  class="button-wrap center">
    <a href="{{params.button_url}}" class="button">{{params.button_text}}</a>
  </div>
  {%endif%}
</div>