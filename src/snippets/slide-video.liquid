<div class="slideshow-slide swiper-slide video-slide style--{{slide.settings.content_style}} position----{{slide.settings.content_position}} mobile-style--{{slide.settings.content_style_mobile}} slide--{{slide.id}}"> <style>
    .slide--{{slide.id}} {
      background-color: {{slide.settings.background_color}}; color: {{slide.settings.text_color}}
    }
    {% if slide.settings.content_style == 'boxed' %}
    .slide--{{slide.id}} .slide-content {
      background-color: {{slide.settings.background_color}}; color: {{slide.settings.text_color}}
    }

    {%endif%}
  </style>
  {% render 'vidbox' with id: block.id, type: slide.settings.video_type, mp4_large: slide.settings.mp4_large,  video_url: slide.settings.url, fallback_gif: slide.settings.fallback_gif, fallback_image: slide.settings.image , overlay: slide.settings.overlay_op, start_time: slide.settings.start_time %}

  {% unless background == true %}
    {% include 'slide-content' %}
{% endunless %}
</div>