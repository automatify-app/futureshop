<!-- theme header -->
<style>
body {

  {% if settings.heading_typekit != blank %}
    --font-heading-real:  {{settings.heading_typekit}}, {{ settings.font_heading.family }}, {{ settings.font_heading.fallback_families }};
  {% else %}
    --font-heading-real:  {{ settings.font_heading.family }}, {{ settings.font_heading.fallback_families }};
  {% endif%}
  {% if settings.body_typekit != blank %}
    --font-body-real: {{settings.body_typekit}} , {{ settings.font_body.fallback_families }};
  {%else%}
    --font-body-real: {{ settings.font_body.family }}, {{ settings.font_body.fallback_families }};
  {% endif%}
  {% if settings.extra_typekit != blank %}
    --font-extra-real: {{settings.extra_typekit}}, {{ settings.font_extra.family }}, {{ settings.font_extra.fallback_families }};
  {% else %}
    --font-extra-real: {{ settings.font_extra.family }}, {{ settings.font_extra.fallback_families }};
  {% endif %}
  {% if settings.script_typekit != blank %}
    --font-script-real: {{settings.script_typekit}};
  {% endif %}

  --color-border: {{settings.color_borders}};
}
{% if settings.general_css != blank %}
  {{settings.general_css}}
{% endif%}

.product-grid-item .price-outer {
  font-weight: {{settings.price_font_weight | default: 700}}

}

.site-header__wrap {
  {% if settings.color_header_background %}
    --header-bg: {{settings.color_header_background | default: "transparent"}};
    --header-bg-dropdown: {{settings.color_header_background | default: "transparent" }};
    {%endif %}
    {% if settings.color_header_text %}
      --header-text: {{settings.color_header_text | default: "inherit" }};
    {%endif %}
    {% if settings.color_header_text_hover %}
      --header-text-hover: {{settings.color_header_text_hover | default: "inherit" }};
    {%endif %}
      {% if settings.color_header_overlay_text != blank %}
      --color-overlay: {{settings.color_header_overlay_text | default: "inherit" }};
    {%endif %}
}
</style>