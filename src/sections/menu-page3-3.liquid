{% include 'menu-section' %}

{% schema %}
   {
    "name": "Menu Section",
    "class" : "menu-section menu-standard",
    "settings": [
      {
        "type": "checkbox",
        "id": "enable",
        "label": "Enable Section",
        "default": false
      },
      {
        "type" : "text",
        "id" : "title",
        "label" : "Menu Title",
        "default" : "Greens"
      },
      {
        "type" : "text",
        "id" : "subtitle",
        "label" : "Menu Subtitle",
        "default" : "Add grilled chicken for $5"
      },
      {
        "type" : "text",
        "id" : "common_price",
        "label" : "Common Price",
        "info" : "Good for beer, cocktails, specials."
      },
      {
        "type": "select",
        "id": "layout",
        "label": "Layout",
        "options": [
          {
            "value": "simple",
            "label": "Simple"
          },
          {
            "value": "standard",
            "label": "Standard"
          },
          {
            "value": "small",
            "label": "Small"
          }
        ],
        "info": "Simple: good for drinks, no description. Standard: all info shown. Small: renders in three columns (only good for beer, etc)", "default" : "standard"
      },
 {
        "type": "checkbox",
        "id": "full_width",
        "label": "Full Width?"

      }
    ],
    "blocks" : [
      {
        "type" : "item",
        "name" : "Menu Item",
        "settings" : [
          {
            "type" : "text",
            "id" : "title",
            "label" : "Title"
          },
          {
            "type" : "checkbox",
            "id" : "veg",
            "label" : "Vegetarian?",
            "info" : "Adds (v) after title"
          },
          {
            "type" : "checkbox",
            "id" : "local",
            "label" : "Local?",
            "info" : "Adds (l) after title"
          },
          {
            "type" : "text",
            "id" : "price",
            "label" : "Price"
          },
          {
            "type" : "richtext",
            "id" : "description",
            "label" : "Description"
          }
        ]
      }
    ]
  }
{% endschema %}