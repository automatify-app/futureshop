{% include 'section-starter' %}

<div class="overlay-section  style--{{section.settings.content_style}} type--{{overlay_type}} {% if section.settings.full_width == true %} full-width {%endif%}" id="{{section.settings.anchor_id}}">
{% include 'common-header' %}
    <ul class="collage__wrap layout--{{section.settings.layout}}">
      {%for block in section.blocks %}
      {% capture image_ratio %}{% if block.settings.image.aspect_ratio > 1.1 %}ratio--horizontal{%elsif block.settings.aspect_ratio < 0.89 %}ratio--vertical{%else%}ratio--square{%endif%}{%endcapture%}
        <li class="collage__item {{image_ratio}} lazyload" style="background-position: {{block.settings.center_x | default: 50 }}% {{block.settings.center_y | default: 50 }}%; background-image: url({{block.settings.image | img_url: '500x'}});" data-bgset="{%render 'responsive-bg-image' with image: block.settings.image %}">
        </li>
      {%endfor %}
    </ul>
</div>
</section>

{% stylesheet 'scss' %}
  .collage__wrap {
    display: flex;
    flex-wrap: wrap;

    list-style: none;
    padding: 0;
    margin: 0;

    @supports (display: grid) {
      display: grid;
      grid-template-columns: repeat(12, 1fr);
      grid-auto-rows: calc(120px + 10vw);
      grid-gap: calc(12px + 0.4vw);
      &.layout--square {
        .collage__item {
          grid-column: span 3 !important;
        }
      }
      @media only screen and (max-width: 520px) {
        grid-template-columns: repeat(4, 1fr);
        .collage__item.ratio--horizontal {
          grid-column: span 4;
        }
        .collage__item.ratio--square,
        .collage__item.ratio--vertical {
          grid-column: span 2;
        }
      }
    }
  }

  .collage__item {
    flex: 1 1 auto;
    grid-column: span 4;
    background-size: cover;
    background-repeat: no-repeat;
    background-position: 0 0;
    &.ratio--horizontal {
      grid-column: span 6;
    }
    &.ratio--vertical {
      grid-column: span 3;
    }
  }
{% endstylesheet %}
