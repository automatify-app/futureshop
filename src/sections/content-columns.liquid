{% assign delay = 0 %}
{% include 'section-starter' with section_class: 'content-columns--outer' %}

<div class="section-inner columns-wrap {% if section.settings.expand == true %} expand {%endif%}">
  {% include 'common-header' with include_button: false %}
  {% for block in section.blocks %}
        {% case block.type %}
        {% when 'code' %}
          {% render 'column-code' with type: block.type, params: block.settings %}
        {% when 'text' %}
          {% render 'column-text' with type: block.type, params: block.settings%}
        {% when 'product' %}
          {% include 'column-product' with id: section.id, type: block.type, params: block.settings %}
        {% when 'image' %}
          {% render 'column-image' with type: block.type, params: block.settings %}
        {% when 'textimg' %}
          {% render 'column-textimg' with type: block.type, params: block.settings %}
        {% when 'before-after' %}
          {% render 'column-before-after' with type: block.type, params: block.settings %}
      {%endcase%}
  {%endfor%}
</div>
</section>
{% stylesheet 'scss' %}

.shopify-section.content-columns {
  overflow: hidden
}

.shopify-section.content-columns .common-header__outer {
  flex: 0 0 100%;
  max-width: 100%;
  margin: 1.5em auto 0;
}

.section-inner.columns-wrap {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-wrap: wrap;

  &.expand {
    margin: 0;
    max-width: 100%;
    width: 100%;
    justify-content: space-between;

    .type--image {
      padding: 0;
      margin: 0;
      &.colsize--huge {
        flex: 1 1 100%;
      }
    }


    @media only screen and (min-width: 1081px) {
      flex-wrap: nowrap;

      .type--text {
        padding: calc(12px + 1vw) calc(20px + 2vw)
      }
    }

    @media only screen and  (min-width: 1700px) {
      padding: 0 calc(50vw - 1000px);
    }

  }
}

.columns-inner .common-header__outer {
  width: 100%;
  max-width: 100%;
}

.column-product-image {
  width: 90%;
  margin: 3% auto;
}

.content-column__product .swatch .header {
  display: none;
}

.content-column__product .swatch-element:only-child {
  display: none;
}

.content-column {
  margin:1%;
  padding: calc(12px + 1vw);

  &.colsize--small {
    flex: 1 1 200px;
    max-width: 600px;
    padding: calc(6px + 0.6vw);

    h4.label {
      font-size: 15px;
    }

    h3.heading {
      font-size: 25px;
    }
  }

  &.colsize--medium {
    flex: 1 1 440px;
    max-width: 790px;

    h4.label {
      font-size: 17px;
    }
  }

  &.colsize--large {
    flex: 1 1 600px;
    max-width: 100%;
  }

  &.colsize--huge {
    flex: 1 1 900px;
    max-width: 100%;
  }

  .button-wrap {
    text-align: inherit;

    .button {
      margin: 0;
    }
  }

  &.type--text {
    position: relative;
    z-index: 2  ;
  }

  &.type--image {
    position: relative;
    z-index: 1;
    &.has--img2 {
      .content-column__image:nth-child(1) {
        width: 85%;
      }
      .content-column__image:nth-child(2) {
        width: 60%;
        margin: -52% -7% 20% auto;
      }
      &.has--img3 {
         .content-column__image:nth-child(1) {
          width: 65%;
        }
        .content-column__image:nth-child(2) {
          width: 59%;
          margin: -52% -5% -30% auto;
        }
        .content-column__image:nth-child(3) {
          width: 75% ;
          margin: -50% auto 0 -20%
        }
      }
    }
  }

  &.type--textimg {
    .content-column__image {
      margin: calc(12px + 1vw) auto;
    }
  }

  .rte b, .rte strong {
    font-size: 1.43em;
  }
}

.block-header .button-wrap {
  margin: 1.5rem auto 0;
}

.embed-wrap {
  margin: calc(22px + 0.5vw) auto;
}
