
{% include 'section-starter' with section_class: 'music-contact' %}
<div class="section-inner contact-columns">
{% if section.blocks.size > 0 %}
<div class="contact-blocks">
{%for block in section.blocks %}
  <div class="contact-block">
    <h4 class="h4 label">{{block.settings.title}}</h4>
    <div class="h3">{{block.settings.name}}</div>
    <a class="button inherit" href="{{block.settings.url}}">Contact</a>
  </div>
{%endfor%}
</div>
{%endif%}
<div class="contact-main">}
  {% include 'common-header' %}
  {%include 'contact-form' %}
</div>
</div>
