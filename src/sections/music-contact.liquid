
{% include 'section-starter' with section_class: 'music-contact' %}
<div class="section-inner contact-columns">
<div class="contact-main">
  {% include 'common-header' %}
  {% if section.settings.include_contact_form == true %}
  {% render  'contact-form' %}
  {% endif %}
</div>
{% if section.blocks.size > 0 %}
<div class="contact-blocks">
{%for block in section.blocks %}
  <div class="contact-block">
    <h4 class="h5 label">{{block.settings.title}}</h4>
    <div class="h4 heading">{{block.settings.name}}</div>
    {% if block.setttings.button_1_url != blank and block.settings.button_1_text != blank %}
    <div class="button-wrap">
      <a class="button inherit" href="{{block.settings.button_1_url}}">{{block.settings.button_1_text}}</a>
      {% if block.setttings.button_2_url != blank and block.settings.button_2_text != blank %}
      <a class="button inherit" href="{{block.settings.button_2_url}}">{{block.settings.button_2_text}}</a>
      {%endif%}
    </div>
    {%endif%}
  </div>
{%endfor%}
</div>
{%endif%}

</div>

{% stylesheet %}
.section-inner.contact-columns {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-wrap: wrap;
}
.contact-main {
  text-align: center;
  flex: 2 1 450px;
  max-width: 720px;
  padding: 20px;
}
.contact-blocks {
  flex: 1 1 150px;
  max-width: 350px;
  padding: 20px;
}
{%endstylesheet%}
