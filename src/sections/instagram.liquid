{%- comment -%}
  This is a required section for the Shopify Theme Store.
  It is available when you add "Instagram" section on the Theme Editor.

  Theme Store required settings
  - Heading: title of the Instagram section
  - Text: description of the Instagram section
{%- endcomment -%}

{% include 'section-starter' with section_class: 'instagram' %}
<div class="section-inner">
{% assign delay = 0 %}
  {% include 'common-header' with include_button: false%}
  <div data-aos="fade-up" data-aos-delay="{{delay}}{% assign delay = delay | plus: 50 %}" class="embed-wrap">
    {{section.settings.html}}
  </div>
  {% if section.settings.button_text != blank and section.settings.button_text != blank %}
    <div class="button-wrap center" data-aos="fade-up" data-aos-delay="{{delay}}{% assign delay = delay | plus: 50 %}">
      <a href="{{section.settings.button_url | default: settings.social_instagram_link }}" class="button accent" target="_blank" rel="nofollow"><i class="icon-instagram"></i> {{section.settings.button_text}}</a>
    </div>

      {%endif%}
      {% if section.settings.include_all_icons == true %}
      <div class="all-social-icons" data-aos="fade-up" data-aos-delay="{{delay}}{% assign delay = delay | plus: 50 %}">
        {% include 'social-icons' %}
      </div>
    {%endif%}
  </div>
</section>

