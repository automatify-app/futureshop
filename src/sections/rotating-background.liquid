{% include 'section-starter' %}

<div class="overlay-section  style--{{section.settings.content_style}} type--{{overlay_type}} {% if section.settings.full_width == true %} full-width {%endif%}" id="{{section.settings.anchor_id}}">
{% include 'common-header' %}
    <div class="swiper-container" data-module="swiper" data-swiper-speed="{{section.settings.speed}}" data-swiper-dots="{{section.settings.dots}}" data-swiper-arrows="{{section.settings.arrows}}" data-swiper-animation="{{section.settings.type}}" data-auto-height="false">
      <div class="swiper-wrapper">
        {%for slide in section.blocks %}
        {%if slide.type == 'video' %}
            {% include 'slide-video' with background: true %}
        {% else %}
          {% include 'slide-background' with background: true%}
          {%endif%}
        {%endfor%}
      </div>
      {% if section.settings.dots == true %}
      {%endif%}
      {% if section.settings.arrows == true %}
       <div class="swiper-pagination"></div>
      <!-- If we need navigation buttons -->
        <div class="swiper-button-prev"></div>
        <div class="swiper-button-next"></div>
      {% endif %}
    </div>
</div>
</section>

{% stylesheet 'scss' %}
  .rotating-background {

    .overlay-section {
      display: flex;
      position: relative;
      align-items: center;
      justify-content: center;
      flex-direction: column;
      min-height: 44vw;
      padding: 5vw 2vw;

      .header-overlay &:first-child .overlay-section {

      }
      .common-header__outer {
        position: relative;
        z-index: 10;
      }
      .swiper-container {
        position: absolute;
        z-index: 0;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
      }

      .swiper-wrapper {
        height: 100%;
      }
    }
  }

  .header-overlay .rotating-background:first-of-type .overlay-section {
    padding: calc(3vw + 100px) 12px !important;
  }
{% endstylesheet %}

