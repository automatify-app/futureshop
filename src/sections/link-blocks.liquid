
{% include 'section-starter' with section_class: 'link-images' %}
<div class="section-inner">
{% assign delay = 0 %}
   {% include 'common-header' %}
  </div>
  <div class="link-images__inner">
  {% for block in section.blocks %}
    <div data-aos="fade-up" data-aos-delay="{{delay}}{% assign delay = delay | plus: 50 %}" class="link-image__block style--{{block.settings.style}} type--{{block.type}}">
      {% if block.settings.image != blank %}
      <a  href="{{block.settings.url}}" {% if block.settings.external == true %} rel="nofollow" target="_blank"{%endif%} class="link-image__image shadow--normal">{% include 'responsive-image' with image: block.settings.image, max_width: 900, max_height: 800 %}</a>
      {%endif%}
    {% unless block.type == 'just-image' %}
      <div class="link-image__content">
      {% if block.settings.logo_image != blank %} {% include 'responsive-image' with block.settings.logo_image, max_width: 300, max_height: 300 %} {%endif%}
      {% if block.settings.title != blank %} <h4> {{block.settings.title }} </h4>{%endif%}
      {% if block.settings.subtitle != blank %} {{block.settings.subtitle }} {%endif%}
        {% if block.settings.button_text != blank %} <a href="{{block.settings.url}}" class="button"> {{block.settings.button_text }}</a>{%endif%}
      </div>
      {%else %}

    {%endunless%}
    </div>
    {%endfor%}
  </div>
</section>

{% stylesheet 'scss' %}
  .link-images__inner {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-wrap: wrap;
  margin: calc(12px + 1vw);
}

  .link-image__block {
    flex: 1 1 200px;
    margin: 12px;

    text-align: center;
    @media only screen and max-width(1080px) {
      flex: 1 1 160px;
      margin: 8px;
    }

    &.type--link .link-image__image {

      display: block;
      position: relative;
      img {
        position: relative;
        z-index: 23;
      }

    }
  }
{% endstylesheet %}


