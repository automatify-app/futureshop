{%- assign product = all_products[section.settings.product] -%}
{%- assign current_variant = product.selected_or_first_available_variant -%}
{%- assign featured_image = current_variant.featured_image | default: product.featured_image -%}

{% if product == empty %}
  {%- assign section_onboarding = true -%}
  {%- assign onboarding_title = 'homepage.onboarding.product_title' | t -%}
{% else %}



{% include 'section-starter' with section_class: 'featured-product' %}
<div class="section-inner">
  {% assign delay = 0 %}
  {% unless section.settings.hide_title == true%}
   {% include 'common-header' %}
   {%endunless%}
   <div class="featured-product__content" data-section-id="{{ section.id }}" data-section-type="product" >
   {% include 'product-images' %}

    <div class="product-details__wrap {% if section.settings.hide_title == true %} title-hidden {%endif%}">

      {% if section.settings.hide_title == true %}
      <header class="common-header type--product">
        {% if section.settings.introduction != blank %}
          <h4 data-aos="fade-in" data-aos-delay="{{delay}}{% assign delay = delay | plus: 50 %}" class="h4 label common-header__introduction">{{ section.settings.introduction | escape }}</h4>
        {% endif %}
        {% if section.settings.heading != blank %}
          <h2 data-aos="fade-in" data-aos-delay="{{delay}}{% assign delay = delay | plus: 50 %}" class="main-header font--{{settings.font_family_heading}} style--{{settings.header_style}} color--{{settings.header_color}} spacing--{{settings.header_spacing}} common-header__heading">{{ section.settings.heading | escape }}</h4>
        {% endif %}
        {% if section.settings.subtitle != blank %}
          <h4 data-aos="fade-in" data-aos-delay="{{delay}}{% assign delay = delay | plus: 50 %}" class="h4 label common-header__subtitle">{{ section.settings.subtitle | escape }}</h4>
        {% endif %}
      </header>
      {%else %}
      <h1 data-aos="fade-in" data-aos="fade-in" data-aos-delay="{{delay}}{% assign delay = delay | plus: 50 %}">{{ product.title }}</h1>
      {% endif %}

      {%include 'product-form' %}

      {% if section.settings.show_description == true %}<div class="rte" data-aos="fade-in" data-aos-delay="{{delay}}{% assign delay = delay | plus: 50 %}">
        {{ product.description }}
      </div>
      {%endif%}

    </div>
    </div>
    </div> <!--/.section-inner-->
</section>

{%endif%}


